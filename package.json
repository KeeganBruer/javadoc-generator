{
	"name": "javadoc-generator",
	"displayName": "Javadoc-Generator",
	"description": "A unofficial VSCode wrapper to the official javadoc executable.",
	"publisher": "KeeganBruer",
	"version": "3.0.4",
	"icon": "JavaGeneratorLogo.PNG",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "jdg.config",
				"title": "JDG: Initialize Config file"
			},
			{
				"command": "jdg.run",
				"title": "JDG: Generate Javadoc"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "jdg.run",
					"when": "false"
				},
				{
					"command": "jdg.config",
					"when": "false"
				}
			],
			"editor/title": [
				{
					"command": "jdg.run",
					"group": "navigation",
					"when": "resourceScheme == file && resourceFilename == config.jdgenerator"
				}
			],
			"explorer/context": [
				{
					"command": "jdg.config",
					"when": "explorerResourceIsFolder",
					"group": "jdg"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p ./",

		"package": "vsce package",
		"publish": "vsce publish",
		"vsmarket": "npm run package & npm run publish",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"@vscode/test-electron": "^1.6.2",
		"@vscode/vsce": "^2.22.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/KeeganBruer/javadoc-generator.git"
	}
}
